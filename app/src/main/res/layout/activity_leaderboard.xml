<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/leaderboard">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/leave_game_button"
            android:text="Back"
            android:layout_marginStart="10dp"
            android:backgroundTint="#9ebfe0"/>
    </LinearLayout>

    <!-- Buttons to Switch Between Global and Local -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/global_button"
            android:text="Global"
            android:layout_marginStart="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/local_button"
            android:text="Local"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="#9ebfe0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank1"
            android:text="1. AJB $1,000,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank2"
            android:text="2. ABC $100,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank3"
            android:text="3. AJR $10,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank4"
            android:text="4. RDJ $9,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank5"
            android:text="5. DFW $8,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank6"
            android:text="6. BWI $7,000 "
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank7"
            android:text="7. DCA $6,000 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank8"
            android:text="8. WAC $5,000 "
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank9"
            android:text="9. HIL $100 "
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rank10"
            android:text="10. SFA $10 "
            android:textSize="20sp"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>